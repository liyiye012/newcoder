#include<iostream>
#include<vector>
#include<string>
using namespace std;
int main(){
    int n;
    cin>>n;
    string s="";
    while(n){
        if(n& 0x1){
            n=(n-1)/2;
            s+='1';
        }else{
            n=(n-2)/2;
            s+='2';
        }
    }
    string res="";
    for(int i=s.size()-1;i>=0;i--){
        res+=s[i];
    }cout<<res;
    return 0;
}
